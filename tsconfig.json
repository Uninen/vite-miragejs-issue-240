{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./",
    "types": [],
    "paths": {
      "@/*": ["./*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "*.vue",
    "./*.vue",
    "./**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "main.js"
  ],
  "exclude": ["node_modules"]
}
